<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BusinessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coffeeImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:adjustViewBounds="true"
            android:contentDescription="@string/coffeeImageText"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/coffee" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/beersImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:adjustViewBounds="true"
            android:contentDescription="@string/beersImageText"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/beers" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/businessMenuLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/newProductButton"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/lime"
                android:shadowColor="@color/lime"
                android:text="@string/newProductButtonText"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/editProductsButton"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lime"
                android:shadowColor="@color/lime"
                android:layout_marginTop="10dp"
                android:text="@string/editProductButtonText"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/addWorkingEmployeeButton"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:text="@string/addWorkingEmployeeButtonText"
                android:layout_height="wrap_content"
                android:background="@color/lime"
                android:shadowColor="@color/lime"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/removeWorkingEmployee"
                android:layout_width="match_parent"
                style="@android:style/Widget.Button"
                android:layout_height="wrap_content"
                android:background="@color/lime"
                android:shadowColor="@color/lime"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/xWorkingEmployeeText"/>

            <Button
                android:id="@+id/alterNumberTablesButton1"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:text="@string/alterNumberTablesText2"
                android:layout_height="wrap_content"
                android:background="@color/lime"
                android:shadowColor="@color/lime"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>